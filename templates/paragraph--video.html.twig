{% extends '@paragraphs_types/paragraph.html.twig' %}

{%
set classes = [
  'article-advanced-video-block',
  'rt-content'
]
%}

{% block content %}
  <div{{ attributes.addClass(classes) }}>
    {% if video_host == 'youtube' %}
      <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ video_id }}?showinfo=0&rel=0" frameborder="0" allowfullscreen></iframe>
    {% elseif video_host == 'vimeo' %}
      <iframe src="https://player.vimeo.com/video/{{ video_id }}" width="560" height="315" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    {% endif %}
  </div>
{% endblock %}
